header#banner.hero-unit
  .container
    h1 Stock Streamer
    // p.lead Kick-start your next web app with Angular Fullstack
    // img(src='assets/images/yeoman.png', alt='I\'m Yeoman')

.container
  .row
    .twelve.columns
      #chart

  .row
    .twelve.columns
      h3 Symbols:
      ul.symbols
        li.two.columns.symbol(ng-repeat='stock in stocks')
          span.symbol-span {{stock.name}}
          button.close(type='button', ng-click='deleteStock(stock.name)') ×

  form.thing-form
    label Syncs in realtime across clients
    p.input-group.row
      input.ten.columns.form-control(type='text', placeholder='Add a new stock symbol here.', ng-model='newStock')
      span.two.columns.input-group-btn
        button.btn.btn-primary(type='submit', ng-click='addStock()') Add New
    p.error(ng-show="error") {{error}}

